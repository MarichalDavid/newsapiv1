POSTGRES_HOST=db
POSTGRES_DB=news
POSTGRES_USER=news
POSTGRES_PASSWORD=news
POSTGRES_PORT=5432

# OLLAMA
OLLAMA_MODEL=llama3
OLLAMA_BASE_URL=http://ollama:11434

# Collector
USER_AGENT=NewsIA-Bot/1.0 (+contact@example.org)
COLLECTOR_DEFAULT_FREQUENCY_MIN=10
# Redis
REDIS_URL=redis://redis:6379/0
API_CACHE_TTL_SECONDS=30
# Topics / Embeddings
TOPICS_EMBED_MODEL=paraphrase-multilingual-MiniLM-L12-v2
TOPICS_WINDOW_DAYS=7
# LLM
# Demo seed
USE_DEMO_SEED=true
# Feeds file
FEEDS_FILE=/config/rss_feeds_global.json

# Configuration collecte automatique
ENABLE_AUTO_COLLECTION=true  
COLLECTION_INTERVAL_MINUTES=30

# Configuration des tâches périodiques du worker
ENABLE_TOPICS_REFRESH=true
ENABLE_SENTIMENT_AGG=true

# Configuration LLM pour les nouvelles synthèses
ENABLE_LLM=true