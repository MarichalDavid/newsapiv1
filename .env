# NewsAI Production Environment Configuration

# Database Configuration
POSTGRES_HOST=db
POSTGRES_DB=news
POSTGRES_USER=news
POSTGRES_PASSWORD=news
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://news:news@db:5432/news

# Ollama Configuration
OLLAMA_MODEL=qwen2.5:3b
OLLAMA_BASE_URL=http://ollama:11434

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO
USER_AGENT=NewsAI-Bot/1.0 (+contact@example.org)

# Collection Configuration
ENABLE_AUTO_COLLECTION=true
COLLECTION_INTERVAL_MINUTES=30
COLLECTOR_DEFAULT_FREQUENCY_MIN=10

# Cache Configuration
API_CACHE_TTL_SECONDS=300
CACHE_DEFAULT_TTL=3600

# Worker Configuration
WORKER_RETRY_ATTEMPTS=3
MAX_SOURCES_PER_BATCH=10
HTTP_TIMEOUT=30
DB_MAX_RETRIES=5

# Features Configuration
ENABLE_LLM=true
ENABLE_TOPICS_REFRESH=true
ENABLE_SENTIMENT_AGG=true
USE_DEMO_SEED=true

# Security (for production)
API_KEY_REQUIRED=false
RATE_LIMIT_ENABLED=false
CORS_ORIGINS=*

OLLAMA_CONTEXT_LENGTH=8192
