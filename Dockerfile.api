FROM python:3.11-slim

RUN apt-get update && apt-get install -y build-essential gcc libxml2-dev libxslt1-dev && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

COPY newsapi /app/
EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
